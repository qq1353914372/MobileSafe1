<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.helloword.lgy.mobilesafe.HomeActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#8866ff00"
        android:gravity="center"
        android:text="设置中心"
        android:textSize="35sp" />

    <com.helloword.lgy.mobilesafe.ui.SettingItemView
        android:id="@+id/siv_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
    </com.helloword.lgy.mobilesafe.ui.SettingItemView>

    <com.helloword.lgy.mobilesafe.ui.SettingItemView
        android:id="@+id/siv_checkadress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ></com.helloword.lgy.mobilesafe.ui.SettingItemView>

    <com.helloword.lgy.mobilesafe.ui.SettingClickView
        android:id="@+id/scv_toaststyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></com.helloword.lgy.mobilesafe.ui.SettingClickView>

    <com.helloword.lgy.mobilesafe.ui.SettingClickView
        android:id="@+id/scv_toastlocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></com.helloword.lgy.mobilesafe.ui.SettingClickView>

    <com.helloword.lgy.mobilesafe.ui.SettingItemView
        android:id="@+id/siv_blacknumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ></com.helloword.lgy.mobilesafe.ui.SettingItemView>
    <com.helloword.lgy.mobilesafe.ui.SettingItemView
        android:id="@+id/siv_applock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ></com.helloword.lgy.mobilesafe.ui.SettingItemView>
</LinearLayout>