<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_splash"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/luncher_bg"
    tools:context="com.helloword.lgy.mobilesafe.SplashActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_sqlash_version"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:text="安全卫士"
        android:textSize="35sp" />

    <TextView
        android:id="@+id/tv_sqlash_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="版本：1.0"
        android:textSize="22sp" />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_sqlash_version"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_alignParentBottom="true"
        android:visibility="invisible"
        android:textSize="22sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="当前下载进度0%"
        android:id="@+id/tv_sqlash_progress"
        />
</RelativeLayout>
